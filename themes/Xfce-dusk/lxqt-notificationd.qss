Notification {
    color: #ffffff;
    background: #232323;
    border: 1px solid #181818;
    border-radius: 2px;
}

QLabel {
    color: #ffffff;
}

#appLabel {
    font-weight: bold;
}

#closeButton {
    color: #ffffff;
    background: none;
    border: 2px solid transparent;
    border-image: none;
    margin: 2px;
    padding: 2px;
    qproperty-icon: url(assets/icons/close.svg);
}

#closeButton:hover {
    border-image: url(assets/buttons/button-hover.png);
}

#closeButton:pressed {
    border-image: url(assets/buttons/button-pressed.png);
}
