/* Main dialog window */
QDialog {
    color: #ffffff;
    background: #232323;
    border: 1px solid #181818;
}

/* Caption colors */
QLabel {
    color: #ffffff;
    background: transparent;
}

/* Session action buttons */
QAbstractItemView {
    color: #ffffff;
    background: #ffffff;
    /* note: must use solid color 1px .png image for bg color */
    background-image: url(assets/menus/bg.png);
    border: 1px solid #181818;
}

/* Confirmation dialog buttons */
QPushButton {
    color: #ffffff;
    background: transparent;
    border: 2px solid transparent;
    border-image: url(assets/buttons/button.png);
    padding: 4px 20px;
    margin: 0px 6px;
}

QToolButton {
    color: #ffffff;
    background: transparent;
    border: 2px solid transparent;
    border-image: url(assets/buttons/button.png);
    padding: 4px 5px;
    margin: 0px 6px;
}

QPushButton:hover,
QToolButton:hover {
    color: #ffffff;
    background: transparent;
    border-image: url(assets/buttons/button-hover.png);
}

QPushButton:pressed,
QToolButton:pressed {
    color: #ffffff;
    background: transparent;
    border-image: url(assets/buttons/button-pressed.png);
}
