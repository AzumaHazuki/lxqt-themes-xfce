/* Dropdown panel */
#panel {
    color: #ffffff;
    background: #232323;
    border: 2px solid transparent;
    border-image: url(assets/buttons/button.png);
}

/* Buttons */
QToolButton {
    color: #ffffff;
    background: transparent;
    border: 2px solid transparent;
    border-image: none;
    padding: 3px;
}

QToolButton:hover {
    border-image: url(assets/buttons/button-hover.png);
}

QToolButton:pressed {
    border-image: url(assets/buttons/button-pressed.png);
}

QToolButton::menu-indicator {
    image: none;
}

#closeButton {
    qproperty-icon: url(assets/icons/close.svg);
    qproperty-iconSize: 16px;
}

#actionButton {
    qproperty-icon: url(assets/icons/menu.svg);
    qproperty-iconSize: 16px;
}

/* Command box */
#commandEd {
    color: #ffffff;
    background: transparent;
    border: 2px solid transparent;
    border-image: url(assets/boxes/entry.png);
    padding: 2px;
    selection-color: #fcfcfc;
    selection-background-color: #002849;
    font: normal;
}

/* Search results */
#commandList {
    color: #ffffff;
    background: #121212;
    border-bottom: 1px solid #181818;
    border-left: 1px solid #181818;
    border-right: 1px solid #181818;
    border-top: none;
}

#commandList::item,
#commandList::item:alternate {
    color: #ffffff;
    background: #121212;
}

#commandList::item:hover,
#commandList::item:selected,
#commandList::item:selected:hover {
    color: #fcfcfc;
    background: #002849;
}

/* Menus */
QMenu {
    color: #ffffff;
    background: #232323;
    border: 1px solid #181818;
    min-width: 120px;
}

QMenu::item {
    color: #ffffff;
    background: transparent;
    border: 2px solid transparent;
    border-image: none;
    min-width: 120px;
    min-height: 18px;
    margin: 1px;
    padding: 0px 5px 0px 3px;
}

QMenu::item:hover,
QMenu::item:selected {
    color: #ffffff;
    border-image: url(assets/menus/menuitem.png);
}

QMenu::item:disabled {
    color: #808080;
}

QMenu::icon {
    margin-left: 2px;
}

/* Scrollbars */
QScrollBar:vertical {
    color: transparent;
    background: transparent;
    background-image: url(assets/scrollbars/scrollbar-v.png);
    background-repeat: repeat-y;
    background-position: center;
    background-attachment: fixed;
    width: 12px;
    padding: 12px 0px;
}

QScrollBar::handle:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/handle-v.png);
    width: 12px;
    min-height: 24px;
}

QScrollBar::handle:hover:vertical,
QScrollBar::handle:pressed:vertical {
    border-image: url(assets/scrollbars/handle-v-active.png);
}

QScrollBar::add-line:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-down.png);
}

QScrollBar::add-line:hover:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-down-hover.png);
}

QScrollBar::add-line:pressed:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-down-pressed.png);
}

QScrollBar::sub-line:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-up.png);
}

QScrollBar::sub-line:hover:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-up-hover.png);
}

QScrollBar::sub-line:pressed:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-up-pressed.png);
}
