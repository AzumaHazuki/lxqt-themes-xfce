/* Dropdown panel */
#panel {
    color: #101010;
    background: transparent;
    border: 2px solid transparent;
    border-image: url(assets/buttons/button.png);
}

/* Buttons */
QToolButton {
    color: #101010;
    background: transparent;
    border: 2px solid transparent;
    border-image: none;
    padding: 3px;
}

QToolButton:hover {
    border-image: url(assets/buttons/button.png);
}

QToolButton:pressed {
    border-image: url(assets/buttons/button-pressed.png);
}

QToolButton::menu-indicator {
    image: none;
}

#closeButton {
    qproperty-icon: url(assets/icons/close.svg);
    qproperty-iconSize: 16px;
}

#actionButton {
    qproperty-icon: url(assets/icons/menu.svg);
    qproperty-iconSize: 16px;
}

/* Command box */
#commandEd {
    color: #101010;
    background: #ffffff;
    border: 2px solid transparent;
    border-image: url(assets/boxes/entry.png);
    padding: 2px;
    selection-color: #ffffff;
    selection-background-color: #3465a4;
    font: normal;
}

/* Search results */
#commandList {
    color: #101010;
    background: #ffffff;
    border-bottom: 1px solid #b3b3b3;
    border-left: 1px solid #b3b3b3;
    border-right: 1px solid #b3b3b3;
    border-top: none;
}

#commandList::item,
#commandList::item:alternate {
    color: #101010;
    background: #ffffff;
}

#commandList::item:hover,
#commandList::item:selected,
#commandList::item:selected:hover {
    color: #ffffff;
    background: #3465a4;
}

/* Menus */
QMenu {
    color: #101010;
    background: #eeeeec;
    border: 1px solid #b3b3b3;
    min-width: 120px;
}

QMenu::item {
    color: #101010;
    background: transparent;
    border: 1px solid transparent;
    border-image: none;
    min-width: 120px;
    min-height: 20px;
    margin: 1px;
    padding: 0px 5px 0px 3px;
}

QMenu::item:hover,
QMenu::item:selected {
    color: #000000;
    border-image: url(assets/menus/menuitem.png);
}

QMenu::item:disabled {
    color: #888a85;
}

QMenu::icon {
    margin-left: 2px;
}

/* Scrollbars */
QScrollBar:vertical {
    color: transparent;
    background: transparent;
    background-image: url(assets/scrollbars/scrollbar-v.png);
    background-repeat: repeat-y;
    background-position: center;
    background-attachment: fixed;
    width: 15px;
    padding: 15px 0px;
}

QScrollBar::handle:vertical {
    color: transparent;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #e3e5e0, stop:1 #ced2c9);
    background-image: url(assets/scrollbars/grip-v.png);
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/handle-v.png) 2;
    width: 15px;
    min-height: 24px;
}

QScrollBar::add-line:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-down.png);
}

QScrollBar::add-line:pressed:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-down-pressed.png);
}

QScrollBar::sub-line:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-up.png);
}

QScrollBar::sub-line:pressed:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/arrow-up-pressed.png);
}
